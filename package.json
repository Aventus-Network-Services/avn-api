{
  "name": "avn-api",
  "version": "5.7.0",
  "description": "API wrapper around JSON-RPC calls to the AvN",
  "main": "build/lib/index.js",
  "types": "build/lib/index.d.ts",
  "author": "Aventus Network Services",
  "license": "ISC",
  "dependencies": {
    "@polkadot/keyring": "10.4.2",
    "@polkadot/types": "9.14.2",
    "axios": "^0.27.2",
    "bn.js": "^5.2.1",
    "crypto-js": "4.2.0",
    "loglevel": "1.8.1",
    "prettier": "^2.5.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/uuid": "8.3.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.33.0",
    "mocha": "^9.0.2",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "rimraf build && tsc",
    "prepare": "npm run build",
    "pretty": "prettier --config ./.prettierrc.json --check \"**/*.{ts,json}\"",
    "pretty:fix": "prettier --config ./.prettierrc.json --write \"**/*.{ts,json}\"",
    "lint": "eslint . --ext .ts",
    "apiTests": "mocha --timeout 20000000 \"tests/apiTests.js\" --gateway",
    "apiTests:baseline": "baselineCmd=\"--invert --grep @NO_BASELINE\" npm run apiTests",
    "test": "npm run apiTests"
  }
}
